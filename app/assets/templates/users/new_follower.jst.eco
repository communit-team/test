<div id='user-widget-<%=@id%>'>
  <div>
    <img src="<%=@profile_image_url%>" />
  </div>
  <div>
    <div>
      <%=@name%>
      @<%=@screen_name%>
    </div>
    <div>
      Tag
      Following you
    </div>
    <div>
      <% if @following: %>
        unfollow
      <% else: %>
        follow
      <% end %>
      Say Hi
    </div>
  </div>
  <div onclick='Communit2.Pages.Dashboard.dismiss_new_follower(<%=@id%>)'>
    X
  </div>
</div>

